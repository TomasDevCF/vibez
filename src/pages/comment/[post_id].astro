import { HomePage } from "../../layouts/HomePage";
import Layout from "../../layouts/Layout.astro";
import Comments from "../../components/Comments";

const { post_id } = Astro.params;

const accountId = Astro.cookies.get("accountId");
if (!accountId) {
  return Astro.redirect("/register");
}
---

<Layout title="Vibez | Â¿Que piensas de este post?">
  <HomePage client:load>
    <Comments client:load post_id={parseInt(post_id as string)} />
  </HomePage>
</Layout>

<style>
  body {
    background-color: rgb(26, 26, 26) !important;
    display: grid !important;
    grid-template-areas: "aside-l main aside-r";
    grid-template-columns: 250px 1fr 250px;
    max-width: 1024px;
    place-items: center;
  }
</style>
